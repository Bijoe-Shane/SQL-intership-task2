UPDATE employees
SET department = 'Support'
WHERE name IN ('Grace', 'Ivan');

UPDATE employees
SET salary = salary + 5000
WHERE name IN ('Helen', 'Jack');

UPDATE employees
SET email = 'unknown@example.com' WHERE email IS NULL;

DELETE FROM employees
WHERE id = 4;

SELECT * FROM employees;

UPDATE employees SET salary = 30000 WHERE salary IS NULL;
UPDATE employees SET department = 'General' WHERE department IS NULL;

SELECT * FROM employees WHERE email IS NULL OR salary IS NULL OR department IS NULL;